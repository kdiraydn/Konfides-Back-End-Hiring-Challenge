@model EventDto

<form asp-action="Add">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label class="form-label">Date</label>
        <input type="datetime" class="form-control" asp-for="Date">
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>

    <div class="mb-3">
        <label class="form-label">City</label>
        @* <input type="text" class="form-control" asp-for="CityId" > *@
        <select class="form-control" asp-for="CityId" asp-items="@(new SelectList(Model.Cities, "Id", "Name"))">
            <option value="">--Select--</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>

    <div class="mb-3">
        <label class="form-label">Quota</label>
        <input type="text" class="form-control" asp-for="Quota">
    </div>


    <div class="mb-3">
        <label class="form-label">Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
            <option value="">--Select--</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>